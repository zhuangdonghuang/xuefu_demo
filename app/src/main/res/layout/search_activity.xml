<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F55056"

        >

        <TextView
            android:id="@+id/home_search_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/backbutton_icon"
            android:text="返回"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="15sp"
            android:padding="7dp"
            />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:layout_marginRight="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"

            android:background="@drawable/shape_search"
            android:hint="搜索老师、课程"
            android:paddingLeft="30dp"
            android:textSize="15sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_comm_break"
            android:src="@drawable/icon_search"
            android:padding="13dp"
            android:layout_marginLeft="74dp"
            />

        <TextView
            android:id="@+id/home_search_qd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:textSize="15sp"

            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#F5F5F5"
        android:text="热词搜索"
        android:textSize="12sp"
        android:gravity=""
        android:paddingLeft="10dp"
        android:textColor="#BCB3AE"

        />

    <com.xuefuwang.webofstudy.home.ui.FlowLayout


        android:padding="40dp"
        android:id="@+id/flowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"

        >




    </com.xuefuwang.webofstudy.home.ui.FlowLayout>





</LinearLayout>