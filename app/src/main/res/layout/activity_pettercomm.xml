<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/lll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


   <!-- <include layout="@layout/button_item"

        />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F55056"
        >

        <ImageView
            android:id="@+id/train_comm_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backbutton_icon"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"


            />


        <ImageView
            android:id="@+id/train_comm_icon"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:background="#c0c0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/train_comm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李佳薇"
            android:layout_toRightOf="@+id/train_comm_icon"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/train_comm_kf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/xuefu_kefu"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>





<com.xuefuwang.webofstudy.home.ui.StickyNavLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >




    <RelativeLayout
        android:id="@id/id_stickynavlayout_topview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#F55056" >



        <ImageView
            android:id="@+id/train_comm_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icon_personal_header"
           android:layout_centerHorizontal="true"
            />

    <!--    <ImageView
            android:id="@+id/train_comm_mm"
            android:src="@drawable/icon_teacher_name2"
            android:layout_below="@+id/train_comm_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />-->

        <TextView
            android:gravity="center_horizontal"
            android:background="@drawable/icon_teacher_name"
            android:id="@+id/train_comm_tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/train_comm_img"
            android:layout_centerHorizontal="true"
            android:text="黄耀华"
            android:layout_marginTop="12dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#fff"
            />

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/training_comm_rc"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/train_comm_tvname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="幽默风趣 善于总结 重点明确 气氛活跃"
            android:textColor="#fff"
            android:ellipsize="end"
            android:singleLine="true"
            />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="#E51505"
            >

            <TextView
                android:id="@+id/train_comm_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览数:1726"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="10sp"

                 android:layout_gravity="center_vertical"
                android:gravity="center"


                />
            <TextView
                android:id="@+id/train_comm_kc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程:5"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="10sp"

                />
            <TextView
                android:id="@+id/train_comm_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好评率:100.0%"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="10sp"
                />


        </LinearLayout>

    </RelativeLayout>

    <com.xuefuwang.webofstudy.home.ui.SimpleViewPagerIndicator
        android:id="@id/id_stickynavlayout_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffffff" >
    </com.xuefuwang.webofstudy.home.ui.SimpleViewPagerIndicator>

    <android.support.v4.view.ViewPager
        android:id="@id/id_stickynavlayout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >

    </android.support.v4.view.ViewPager>




</com.xuefuwang.webofstudy.home.ui.StickyNavLayout>

</LinearLayout>


